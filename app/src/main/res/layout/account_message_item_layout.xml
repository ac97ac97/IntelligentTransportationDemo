<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:id="@+id/ll_item"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/tv_account_num"
        android:layout_marginLeft="5dp"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginLeft="20dp"
        android:id="@+id/iv_account_car_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bmw" />
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_account_car_num"
            android:text="@string/a10003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_account_car_name"
            android:text="@string/chezhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_account_money"
        android:layout_marginLeft="60dp"
        android:text="@string/_100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/tv_account_select"
        android:layout_marginLeft="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_add_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="@string/chongzhi" />
</LinearLayout>