<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/a_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <include
        layout="@layout/view_h"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <include
            layout="@layout/view_v"/>

        <TextView
            android:id="@+id/tv_lamp_lukou_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="路口编号"/>

        <include
            layout="@layout/view_v"/>

        <TextView
            android:id="@+id/tv_lamp_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="拥挤程度"/>

        <include
            layout="@layout/view_v"/>

        <TextView
            android:id="@+id/tv_lamp_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="红路灯编号"/>

        <include
            layout="@layout/view_v"/>

        <TextView
            android:id="@+id/tv_lamp_lvdeng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="路灯原长"/>

        <include
            layout="@layout/view_v"/>


        <TextView
            android:id="@+id/tv_create_lamp_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="路灯时长"/>


        <include
            layout="@layout/view_v"/>
        <TextView
            android:id="@+id/tv_change_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="修改时间"/>

        <include
            layout="@layout/view_v"/>
    </LinearLayout>

    <include
        layout="@layout/view_h"/>
</LinearLayout>