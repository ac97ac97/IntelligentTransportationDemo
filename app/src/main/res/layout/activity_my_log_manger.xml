<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_my_log_layout" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="路灯管理"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前路灯状态"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/light" />

    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="路灯模式 "
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/tv_ludong_moshi"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@drawable/kaiguan_background">
            <TextView
                android:id="@+id/tv_shoudong"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/open_background"
                android:scaleType="fitXY"
                android:text="手动"
                android:visibility="invisible"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="25sp"

                />
            <TextView
                android:id="@+id/tv_zidong"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/open_background"
                android:scaleType="fitXY"
                android:text="自动"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="25sp"
                android:visibility="visible"

                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="路灯控制 "
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/tv_ludong_kongzhi"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@drawable/kaiguan_background">
           <TextView
               android:id="@+id/tv_open"
               android:layout_width="100dp"
               android:layout_height="30dp"
               android:background="@drawable/open_background"
               android:scaleType="fitXY"
               android:text="开"
               android:textColor="#fff"
               android:textStyle="bold"
               android:gravity="center"
               android:textSize="25sp"
               android:visibility="invisible"

               />
            <TextView
                android:id="@+id/tv_close"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/open_background"
                android:scaleType="fitXY"
                android:text="关"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="25sp"
                android:visibility="visible"

                />
        </LinearLayout>

    </LinearLayout>
<View
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="#000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="路灯管理"
            />
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="日志管理"
            />
    </LinearLayout>
    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"/>
</LinearLayout>
</LinearLayout>