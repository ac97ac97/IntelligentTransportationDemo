<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="速度"
        android:textSize="30sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_two_query"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:background="@color/colorTitleBar"
            android:gravity="center"
            android:text="查询"
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/tv_speed_show"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="125dp"
            android:layout_toRightOf="@+id/btn_two_query"
            android:gravity="center"
            android:text="阈值: 最低  h/km----最高 h/km"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv_two_query_car_id"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="车号"
            android:textSize="25sp"/>

        <Spinner
            android:id="@+id/sp_two_carId"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="300dp"
            android:layout_toRightOf="@+id/tv_two_car_id"
            android:gravity="center">
        </Spinner>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp">


        <TextView
            android:id="@+id/tv_speed_max"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="65dp"
            android:gravity="center"
            android:text="最大"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_speed_max_show"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/tv_speed_max"
            android:gravity="center"
            android:text="h/km"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_speed_min"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:layout_toRightOf="@+id/tv_speed_max_show"
            android:gravity="center"
            android:text="最小"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_speed_min_show"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/tv_speed_min"
            android:gravity="center"
            android:text="h/km"
            android:textSize="20dp"/>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorTitleBar"
        android:text="设置账户阈值"
        android:textSize="25sp"/>


</LinearLayout>